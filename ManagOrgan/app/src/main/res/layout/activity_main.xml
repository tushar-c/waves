        android:layout_marginLeft="15dp"
        android:padding="5dp"
        android:layout_below="@id/tonsil_view"
        />

    <EditText
        android:id="@+id/epiglottis_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/epiglottis"
        android:layout_marginTop="4dp"
        android:textSize="15dp"
        android:layout_marginLeft="150dp"
        android:maxLength="30"
        android:layout_below="@id/tonsil_text"
        />


    <TextView android:id="@+id/aef_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="@string/aef"

<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView android:id="@+id/tongue_base_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="@string/base_tongue"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:padding="5dp"
        />

    <EditText
        android:id="@+id/tongue_base_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/base_tongue"
        android:layout_marginTop="12dp"
        android:textSize="15dp"
        android:layout_marginLeft="150dp"
        android:maxLength="30"
        />

    <TextView android:id="@+id/vallecula_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="@string/vallecula"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:padding="5dp"
        android:layout_below="@id/tongue_base_view"
        />

    <EditText
        android:id="@+id/vallecula_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/vallecula"
        android:layout_marginTop="0dp"
        android:padding="12dp"
        android:textSize="15dp"
        android:layout_marginLeft="150dp"
        android:maxLength="30"
        android:layout_below="@id/tongue_base_text"
        />


    <TextView android:id="@+id/gloss_epiglott_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="@string/epiglott"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="15dp"
        android:padding="5dp"
        android:layout_below="@id/vallecula_view"
        />

    <EditText
        android:id="@+id/gloss_epiglott_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/epiglott"
        android:layout_marginTop="4dp"
        android:textSize="15dp"
        android:layout_marginLeft="150dp"
        android:maxLength="30"
        android:layout_below="@id/vallecula_text"
        />


    <TextView android:id="@+id/tonsil_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="@string/tonsil"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="15dp"
        android:padding="5dp"
        android:layout_below="@id/gloss_epiglott_view"
        />

    <EditText
        android:id="@+id/tonsil_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/tonsil"
        android:layout_marginTop="4dp"
        android:textSize="15dp"
        android:layout_marginLeft="150dp"
        android:maxLength="30"
        android:layout_below="@id/gloss_epiglott_text"
        />


    <TextView android:id="@+id/epiglottis_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="@string/epiglottis"
